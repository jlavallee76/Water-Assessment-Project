<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WAP" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_background_main</item>
        <item name="colorPrimaryVariant">@color/blue_background_accent_light</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_background_accent_dark</item>
        <item name="colorSecondaryVariant">@color/teal_background_accent_light</item>
        <item name="colorOnSecondary">@color/off_black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">true</item>


    </style>
</resources>