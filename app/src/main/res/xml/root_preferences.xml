<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/map_header">

        <EditTextPreference
            android:defaultValue="true"
            android:key="display_limit"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Images returned" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/update_header">

        <SwitchPreferenceCompat
            app:key="push_notification"
            app:title="@string/push_notif" />

    </PreferenceCategory>

</PreferenceScreen>